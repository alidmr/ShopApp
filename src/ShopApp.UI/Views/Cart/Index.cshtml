@model ShopApp.UI.Models.Cart.CartViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>

<div class="row mt-5">
    <div class="col-md-8">
        <div class="text-left">
            <h4>Sepetinizdeki Ürünler</h4>
        </div>
        @if (Model.CartItems.Count > 0)
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <img src="~/img/@item.ImageUrl" alt="@item.Name" width="80" />
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("c")</td>
                            <td>@item.Quantity</td>
                            <td>@((item.Quantity * item.Price).ToString("c"))</td>
                            <td>
                                <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fa fa-times fa-fw"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <p>Sepetinizde ürün bulunmamaktadır.</p>
            </div>
        }
    </div>
    <div class="col-md-4">
        @if (Model.CartItems.Count > 0)
        {
            <div class="text-left">
                <h4>Sepet Özeti</h4>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Cart Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                    <tr>
                        <th>Shipping</th>
                        <td>Free</td>
                    </tr>
                    <tr>
                        <th>Order Total</th>
                        <td>@Model.TotalPrice().ToString("c")</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="/" class="btn btn-primary">
                    <i class="fa fa-arrow-circle-left fa-fw"></i> Continue Shopping
                </a>
                <a href="/checkout" class="btn btn-success">
                    Checkout <i class="fa fa-arrow-circle-right fa-fw"></i>
                </a>
            </div>
        }
    </div>
</div>
