@model ShopApp.UI.Models.Order.OrderViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Details</h4>
        <form asp-controller="Cart" asp-action="Checkout" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" asp-for="LastName" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="form-group">
                    <label>Address</label>
                    <textarea class="form-control" asp-for="Address"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" asp-for="City" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" asp-for="Phone" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info" />
                <label class="custom-control-label" for="save-info">Save this information for next time</label>
            </div>
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-input" checked />
                    <label class="custom-control-label" for="credit">Credit Card</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-control-input" />
                    <label class="custom-control-label" for="paypal">EFT</label>
                </div>
            </div>
            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label>Name on Credit Cart</label>
                        <input type="text" asp-for="CardName" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label>Credit Cart Number</label>
                        <input type="text" asp-for="CardNumber" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>Month</label>
                        <input type="text" asp-for="ExpirationMonth" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>Year</label>
                        <input type="text" asp-for="ExpirationYear" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="form-group">
                        <label>CVV</label>
                        <input type="text" asp-for="Cvv" class="form-control" />
                    </div>
                </div>
            </div>
            <hr class="mb-4" />
            <button class="btn btn-primary btn-lg btn-block" type="submit">Complete Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4 class="mb-3">
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartViewModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">
                            @item.Name
                        <small>x @item.Quantity</small>
                    </h6>
                </div>
                <span class="text-muted">@item.Price.ToString("c")</span>
            </li>
        }
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (TL)</span>
                <strong>@Model.CartViewModel.TotalPrice() TL</strong>
            </li>
        </ul>
    </div>
</div>

