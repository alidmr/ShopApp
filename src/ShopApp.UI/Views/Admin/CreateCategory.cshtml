@model ShopApp.UI.Models.Category.CategoryViewModel
@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateCategory" asp-controller="Admin" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Category Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Category</button>
                </div>
            </div>
        </form>
    </div>
</div>
