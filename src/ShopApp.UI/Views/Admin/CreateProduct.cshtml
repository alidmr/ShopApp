@model ShopApp.UI.Models.Product.ProductViewModel
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>Create Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateProduct" asp-controller="Admin" method="post">
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Prodcut Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Product Image</label>
                <div class="col-md-10">
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label">Product Description</label>
                <div class="col-md-10">
                    <textarea class="form-control" id="editor" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label">Product Price</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Save Product</button>
                </div>
            </div>
        </form>
    </div>
</div>

