@model ShopApp.UI.Models.Category.CategoryViewModel
@{
    ViewData["Title"] = "EditCategory";
}

<h1>Edit Category</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory" asp-controller="Admin" method="post">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <div class="form-group row">
                <label class="col-md-2 col-form-label">Category Name</label>
                <div class="col-md-10">
                    <input type="text" asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img src="~/img/@item.ImageUrl" width="80" />
                        </td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>
                            <a href="/admin/products/@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                            <form action="/admin/DeleteFromCategory" method="post" style="display: inline;">
                                <input type="hidden" name="productId" value="@item.Id" />
                                <input type="hidden" name="categoryId" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>