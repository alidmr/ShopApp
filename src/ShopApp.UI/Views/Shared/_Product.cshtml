@model ShopApp.Entities.Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                <a href="#">@Model.Name</a>
            </h5>
            <small class="text-muted">
                <i class="fa fa-try"></i> @Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Details" asp-controller="Shop" asp-route-id="@Model.Id" class="btn btn-primary btn-secondary">Details</a>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-primary btn-secondary ml-3">Add To Cart</button>
                </form>
            }
        </div>
    </div>
</div>