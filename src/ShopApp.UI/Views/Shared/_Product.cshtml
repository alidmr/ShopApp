@model ShopApp.Entities.Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body">
            <h5 class="card-title">
                <a href="#">@Model.Name</a>
            </h5>
            <small class="text-muted">
                <i class="fa fa-try"></i> @Model.Price
            </small>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Details" asp-controller="Shop" asp-route-id="@Model.Id" class="btn btn-primary btn-secondary">Details</a>
            <a href="#" class="btn btn-primary btn-secondary ml-3">Add To Cart</a>
        </div>
    </div>
</div>